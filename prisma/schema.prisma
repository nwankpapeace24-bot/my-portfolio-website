generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String  @id @default(cuid())
  email    String  @unique
  password String
  name     String?
}

model PortfolioItem {
  id          String   @id @default(cuid())
  title       String
  category    String
  type        String
  client      String
  description String
  image       String
  date        DateTime @default(now())
  tags        String[]
  featured    Boolean  @default(false)
  rating      Float    @default(5.0)
  link        String
  color       String?   // ✅
  icon        String?   // ✅
  isHidden    Boolean  @default(false)
  createdAt   DateTime @default(now())
}

model Service {
  id          String   @id @default(cuid())
  icon        String   // Stores name like "FiMonitor"
  title       String
  description String
  color       String
  isHidden    Boolean  @default(false)
  order       Int      @default(0)
}

model Testimonial {
  id        String   @id @default(cuid())
  name      String
  role      String?
  company   String?
  testimonial String
  rating    Int      @default(5)
  metric    String?
  category  String?
  featured  Boolean  @default(false)
  isHidden  Boolean  @default(false)

  createdAt DateTime @default(now())
}